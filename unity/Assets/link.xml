<linker>
    <!-- Preserve Input System types to prevent IL2CPP stripping -->
    <assembly fullname="Unity.InputSystem" preserve="all"/>
    <assembly fullname="Unity.InputSystem.ForUI" preserve="all"/>

    <!-- Preserve UI types -->
    <assembly fullname="UnityEngine.UI" preserve="all"/>
    <assembly fullname="Unity.TextMeshPro" preserve="all"/>

    <!-- Preserve our bootstrap types -->
    <assembly fullname="Assembly-CSharp">
        <type fullname="ShadowingTutor.Bootstrap.*" preserve="all"/>
        <type fullname="ShadowingTutor.Diagnostics.*" preserve="all"/>
    </assembly>
</linker>
